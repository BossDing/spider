<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder charset="UTF-8">
			<pattern>
				%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>
	
	<!-- 每天一个日志文件[整个应用]，如果超过100M将分包 -->
	<appender name="task"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file><file>/root/logs/datacenter-task/task.log</file></file>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">   
	      	<level>TRACE</level>
	    </filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>
				E:/logs/datacenter-task/task-%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<pattern>
				%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>
	
	<appender name="task_error"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>E:/logs/datacenter-task/task_error.log</file>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">   
	      	<level>ERROR</level>
	    </filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>
				E:/logs/datacenter-task/task_error-%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<pattern>
				%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>
	
	<!-- 输出 -->
	<logger name="com" level="INFO">
		<appender-ref ref="task" />
		<appender-ref ref="task_error" />
	</logger>
	
</configuration>